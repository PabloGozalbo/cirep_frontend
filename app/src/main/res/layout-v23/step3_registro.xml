<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.register.steps.Step3Fragment">

    <TextView
        android:id="@+id/telefonoPregunta"
        android:layout_width="285dp"
        android:layout_height="65dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/telefono_registro"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <EditText
        android:id="@+id/campo_telefono"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:hint="@string/telefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefonoPregunta" />

    <TextView
        android:id="@+id/contrasenyaPregunta"
        android:layout_width="269dp"
        android:layout_height="39dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/contrasenya_registro"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_telefono"
        app:layout_constraintVertical_bias="0.165" />

    <EditText
        android:id="@+id/campo_contrasenya1"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:hint="@string/contrasenya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenyaPregunta"
        app:layout_constraintVertical_bias="0.018" />

    <EditText
        android:id="@+id/campo_contrasenya2"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:hint="@string/repite_contrasenya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_contrasenya1"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/atras_step3"
        android:layout_width="27dp"
        android:layout_height="26dp"
        android:background="#00000000"
        android:drawableStart="@drawable/atras_boton"
        android:foreground="@drawable/atras_boton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:id="@+id/step3button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_contrasenya2"
        app:layout_constraintVertical_bias="0.724" />


</androidx.constraintlayout.widget.ConstraintLayout>